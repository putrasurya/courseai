@code {
    private List<Roadmap>? roadmaps;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoadmaps();
    }

    private async Task LoadRoadmaps()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            // For now, we'll get the current roadmap
            // Later this will be extended to get all roadmaps from database
            var currentRoadmap = RoadmapService.GetRoadMap();
            
            if (currentRoadmap != null && currentRoadmap.Modules.Any())
            {
                roadmaps = new List<Roadmap> { currentRoadmap };
            }
            else
            {
                roadmaps = new List<Roadmap>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading roadmaps: {ex.Message}");
            roadmaps = new List<Roadmap>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToChat()
    {
        NavManager.NavigateTo("/");
    }

    private void ViewRoadmap(Guid roadmapId)
    {
        NavManager.NavigateTo("/roadmap");
    }

    private string GetRoadmapTitle(Roadmap roadmap)
    {
        // Try to get title from learning profile or generate from modules
        if (!string.IsNullOrEmpty(roadmap.LearningProfile?.LearningGoal))
        {
            return roadmap.LearningProfile.LearningGoal.Length > 50 
                ? roadmap.LearningProfile.LearningGoal.Substring(0, 50) + "..."
                : roadmap.LearningProfile.LearningGoal;
        }
        
        if (roadmap.Modules.Any())
        {
            return $"Learning Path: {roadmap.Modules.First().Title}";
        }
        
        return "Untitled Roadmap";
    }

    private string GetRoadmapDescription(Roadmap roadmap)
    {
        if (roadmap.Modules.Any())
        {
            var totalTopics = roadmap.Modules.Sum(m => m.Topics.Count);
            var totalConcepts = roadmap.Modules.SelectMany(m => m.Topics).Sum(t => t.Concepts.Count);
            return $"{totalTopics} topics ‚Ä¢ {totalConcepts} concepts to master";
        }
        return "";
    }

    private double CalculateProgress(Roadmap roadmap)
    {
        if (!roadmap.Modules.Any()) return 0;
        
        // Simple progress calculation - you can make this more sophisticated
        // For now, assume 20% progress for active roadmaps, 100% for completed
        return roadmap.Status switch
        {
            RoadmapStatus.Active => 65.0,
            RoadmapStatus.Approved => 85.0,
            RoadmapStatus.Draft => 15.0,
            RoadmapStatus.AwaitingFeedback => 45.0,
            _ => 0.0
        };
    }

    private string GetStatusClass(RoadmapStatus status)
    {
        return status switch
        {
            RoadmapStatus.Active => "status-active",
            RoadmapStatus.Draft => "status-draft",
            RoadmapStatus.Approved => "status-approved",
            RoadmapStatus.AwaitingFeedback => "status-awaiting",
            _ => "status-draft"
        };
    }

    private string GetStatusText(RoadmapStatus status)
    {
        return status switch
        {
            RoadmapStatus.Active => "üü¢ Active",
            RoadmapStatus.Draft => "üü° Draft",
            RoadmapStatus.Approved => "‚úÖ Approved", 
            RoadmapStatus.AwaitingFeedback => "‚è≥ Pending",
            _ => "üìù Draft"
        };
    }
