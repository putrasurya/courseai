@page "/roadmaps"
@rendermode InteractiveServer
@inject CourseAI.Services.RoadmapService RoadmapService
@inject CourseAI.Services.LearningProfileService LearningProfileService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime

@using CourseAI.Models
@using System.ComponentModel

<PageTitle>My Roadmaps - CourseAI</PageTitle>

<div class="roadmap-list-page">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">üìö My Learning Roadmaps</h1>
        <p class="page-subtitle">Your personalized learning journey collection</p>
    </div>

    <!-- Content -->
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-large"></div>
            <p>Loading your roadmaps...</p>
        </div>
    }
    else if (roadmaps == null || !roadmaps.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">üìù</div>
            <h3>No roadmaps yet</h3>
            <p>Create your first learning roadmap by chatting with our AI assistant!</p>
            <button @onclick="NavigateToChat" class="btn-primary-mobile">
                üí¨ Start Creating Roadmap
            </button>
        </div>
    }
    else
    {
        <!-- Roadmap Cards -->
        <div class="roadmap-grid">
            @foreach (var roadmap in roadmaps)
            {
                <div class="roadmap-card-mobile" @onclick="() => ViewRoadmap(roadmap.Id)">
                    <div class="card-header">
                        <h6 class="card-title">@GetRoadmapTitle(roadmap)</h6>
                        <span class="status-badge @GetStatusClass(roadmap.Status)">@GetStatusText(roadmap.Status)</span>
                    </div>
                    
                    <div class="card-content">
                        <div class="roadmap-stats">
                            <span class="stat-item">
                                üìö @roadmap.Modules.Count modules
                            </span>
                            <span class="stat-item">
                                üìÖ @roadmap.CreatedDate.ToString("MMM dd, yyyy")
                            </span>
                        </div>
                        
                        @{
                            var progress = CalculateProgress(roadmap);
                        }
                        
                        @if (progress > 0)
                        {
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @(progress)%"></div>
                                <span class="progress-text">@((int)progress)% complete</span>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(GetRoadmapDescription(roadmap)))
                        {
                            <p class="roadmap-description">@GetRoadmapDescription(roadmap)</p>
                        }
                    </div>
                    
                    <div class="card-actions">
                        <div class="view-button">
                            üëÅÔ∏è View Roadmap
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Create New Button -->
        <div class="floating-action">
            <button @onclick="NavigateToChat" class="fab-button" title="Create New Roadmap">
                ‚ûï
            </button>
        </div>
    }
</div>

