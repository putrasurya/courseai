@rendermode InteractiveServer
@inject IOrchestratorAgent Orchestrator
@inject NavigationManager NavManager
@inject CourseAI.Services.RoadmapService RoadmapService
@inject CourseAI.Services.LearningProfileService LearningProfileService
@inject CourseAI.Services.IAgentStatusService StatusService
@inject IJSRuntime JSRuntime

@using System.Text
@using System.Threading.Tasks
@using CourseAI.Agents
@using CourseAI.Agents.Interfaces
@using Markdig
@using CourseAI.Models
@implements IDisposable

<PageTitle>CourseAI - Your AI Learning Navigator</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            @if (!isInConversation)
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">What do you want to learn?</h5>
                        <p class="card-text">Describe your learning goal, and our AI agents will craft a personalized roadmap for you.</p>
                        
                        <div class="mb-3">
                            <textarea @bind="learningGoal" class="form-control" rows="4" placeholder="e.g., 'I want to become a full-stack web developer, starting with basic HTML and CSS, and moving to modern JavaScript frameworks and backend development.'"></textarea>
                        </div>

                        <div class="text-end">
                            <button @onclick="StartPlanning" class="btn btn-primary" disabled="@isPlanning">
                                @if (isPlanning)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span> Planning...</span>
                                }
                                else
                                {
                                    <span>Start Planning</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Planning Session</span>
                        <small class="text-muted">Building your profile...</small>
                    </div>
                    <div class="card-body">
                        <!-- Conversation History -->
                        <div @ref="conversationContainer" id="conversationContainer" class="conversation-history mb-3" style="max-height: 400px; overflow-y: auto;" @onscroll="OnScroll">
                            @foreach (var message in conversationHistory)
                            {
                                <div class="mb-3">
                                    <div class="d-flex align-items-start @(message.IsFromUser ? "justify-content-end" : "")">
                                        <div class="message @(message.IsFromUser ? "user-message" : "agent-message") @(GetMessageCssClass(message.MessageType))">
                                            <small class="text-muted">@(message.IsFromUser ? "You" : "AI Planner")</small>
                                            <div class="mb-0">
                                                @((MarkupString)ConvertMarkdownToHtml(GetMessageContentWithoutKeyword(message.Content)))
                                                
                                                @if (!message.IsFromUser && message.Content.Contains("ROADMAP_COMPLETE", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <div class="mt-2">
                                                        <button @onclick="SaveAndNavigateToRoadmap" class="btn btn-success btn-sm" disabled="@isSaving">
                                                            @if (isSaving)
                                                            {
                                                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                                                <span>Saving...</span>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-save me-1"></i>
                                                                <span>Save & View Learning Roadmap</span>
                                                            }
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                            <small class="text-muted">@message.Timestamp.ToString("HH:mm")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Status Indicator -->
                        @if (StatusService.IsProcessing && !string.IsNullOrWhiteSpace(StatusService.CurrentStatus))
                        {
                            <div class="status-indicator mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span class="text-primary fw-medium">@StatusService.CurrentStatus</span>
                                </div>
                            </div>
                        }

                        <!-- User Input for Conversation -->
                        <div class="input-group">
                            <input @ref="userInputElement" @bind="userResponse" @onkeypress="HandleKeyPress" class="form-control" 
                                   placeholder="Type your response..." disabled="@(StatusService.IsProcessing || isSaving)" />
                            <button @onclick="SendResponse" class="btn btn-outline-primary" disabled="@(StatusService.IsProcessing || isSaving || string.IsNullOrWhiteSpace(userResponse))">
                                <span>Send</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .conversation-history {
        border: 1px solid #e9ecef;
        border-radius: 0.375rem;
        padding: 1rem;
        background-color: #f8f9fa;
    }
    
    .message {
        max-width: 70%;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        margin-bottom: 0.5rem;
    }
    
    .user-message {
        background-color: #0d6efd;
        color: white;
        margin-left: auto;
    }
    
    .agent-message {
        background-color: white;
        border: 1px solid #dee2e6;
    }
    
    /* Markdown content styling */
    .message p {
        line-height: 1.5;
        margin-bottom: 0.5rem;
    }
    
    .message h1, .message h2, .message h3 {
        font-size: 1.1em;
        font-weight: 600;
        margin: 0.5rem 0 0.25rem 0;
    }
    
    .message ul, .message ol {
        margin: 0.5rem 0;
        padding-left: 1.5rem;
    }
    
    .message li {
        margin-bottom: 0.25rem;
    }
    
    .message code {
        background-color: #f8f9fa;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
    }
    
    .message pre {
        background-color: #f8f9fa;
        padding: 0.5rem;
        border-radius: 0.25rem;
        margin: 0.5rem 0;
        overflow-x: auto;
    }
    
    .message blockquote {
        border-left: 3px solid #dee2e6;
        padding-left: 0.75rem;
        margin: 0.5rem 0;
        font-style: italic;
    }
    
    .message strong {
        font-weight: 600;
    }
    
    .message em {
        font-style: italic;
    }
    
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        transition: all 0.2s ease-in-out;
        min-width: 200px;
    }
    
    .btn-success:hover:not(:disabled) {
        background-color: #218838;
        border-color: #1e7e34;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .btn-success:disabled {
        background-color: #6c757d;
        border-color: #6c757d;
        cursor: not-allowed;
    }
    
    .status-indicator {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 0.375rem;
        padding: 0.75rem;
        border-left: 4px solid #0d6efd;
    }
    
    .status-indicator .spinner-border-sm {
        width: 1rem;
        height: 1rem;
    }
    
    .spinner-border-sm {
        animation: spinner-border .75s linear infinite;
    }
    
    .saving-message {
        background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
        border-left: 4px solid #2196f3;
        animation: pulse 2s ease-in-out infinite alternate;
    }
    
    .success-message {
        background: linear-gradient(135deg, #e8f5e8, #f8f9fa);
        border-left: 4px solid #4caf50;
    }
    
    .error-message {
        background: linear-gradient(135deg, #ffebee, #f8f9fa);
        border-left: 4px solid #f44336;
    }
</style>

@code {
    private string learningGoal = "";
    private string userResponse = "";
    private bool isPlanning = false;
    private bool isInConversation = false;
    private bool isSaving = false;
    private ElementReference conversationContainer;
    private ElementReference userInputElement;
    private bool isScrollDirty = false; // Track if user has scrolled up manually

    private List<ConversationMessage> conversationHistory = new();

    public class ConversationMessage
    {
        public string Content { get; set; } = "";
        public bool IsFromUser { get; set; }
        public DateTime Timestamp { get; set; } = DateTime.Now;
        public string MessageType { get; set; } = "normal"; // normal, saving, success, error
    }

    protected override void OnInitialized()
    {
        // Subscribe to status changes
        StatusService.OnStatusChanged += OnStatusChanged;
    }

    private void OnStatusChanged()
    {
        // Update UI when status changes
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        // Unsubscribe to prevent memory leaks
        StatusService.OnStatusChanged -= OnStatusChanged;
    }

    private void OnScroll()
    {
        // Check if user has scrolled up manually
        InvokeAsync(async () =>
        {
            var scrollInfo = await GetScrollInfo();
            isScrollDirty = scrollInfo.ScrollTop < (scrollInfo.ScrollHeight - scrollInfo.ClientHeight - 10);
        });
    }

    private async Task<(double ScrollTop, double ScrollHeight, double ClientHeight)> GetScrollInfo()
    {
        try
        {
            var result = await JSRuntime.InvokeAsync<double[]>("getScrollInfo", conversationContainer);
            return (result[0], result[1], result[2]);
        }
        catch
        {
            return (0, 0, 0);
        }
    }

    private async Task FocusInput()
    {
        try
        {
            await Task.Delay(100); // Small delay to ensure the UI is updated
            await userInputElement.FocusAsync();
        }
        catch
        {
            // Ignore focus errors
        }
    }

    private async Task ScrollToBottom()
    {
        if (!isScrollDirty)
        {
            await Task.Delay(50); // Small delay to ensure DOM is updated
            try
            {
                await JSRuntime.InvokeVoidAsync("scrollToBottom", conversationContainer);
            }
            catch
            {
                // Ignore scroll errors
            }
        }
    }

    private async Task StartPlanning()
    {
        if (string.IsNullOrWhiteSpace(learningGoal))
        {
            return;
        }

        isPlanning = true;
        isInConversation = true;

        try
        {
            // Add initial user message
            conversationHistory.Add(new ConversationMessage
            {
                Content = learningGoal,
                IsFromUser = true
            });
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding user message

            // Get agent response (non-streaming) - status will be handled by middleware
            var response = await Orchestrator.StartPlanning(learningGoal);
            
            // Add agent response
            var agentMessage = new ConversationMessage
            {
                Content = response,
                IsFromUser = false
            };
            conversationHistory.Add(agentMessage);
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding agent message

            // Auto-focus the input after receiving agent response
            await FocusInput();

            // Check if the response indicates the profile is complete
            CheckIfProfileComplete(agentMessage.Content);
        }
        catch (Exception ex)
        {
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"Sorry, there was an error: {ex.Message}",
                IsFromUser = false
            });
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding error message
        }
        finally
        {
            isPlanning = false;
            StateHasChanged();
        }
    }

    private async Task SendResponse()
    {
        if (string.IsNullOrWhiteSpace(userResponse) || StatusService.IsProcessing)
            return;

        try
        {
            // Add user message
            conversationHistory.Add(new ConversationMessage
            {
                Content = userResponse,
                IsFromUser = true
            });
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding user message

            string currentResponse = userResponse;
            userResponse = ""; // Clear input
            StateHasChanged(); // Update input field

            // Get agent response (non-streaming) - status will be handled by middleware
            var response = await Orchestrator.Invoke(currentResponse);
            
            // Add agent response
            var agentMessage = new ConversationMessage
            {
                Content = response,
                IsFromUser = false
            };
            conversationHistory.Add(agentMessage);
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding agent message

            // Auto-focus the input after receiving agent response
            await FocusInput();

            // Check if the response indicates the profile is complete
            CheckIfProfileComplete(agentMessage.Content);
        }
        catch (Exception ex)
        {
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"Sorry, there was an error: {ex.Message}",
                IsFromUser = false
            });
            StateHasChanged();
            await ScrollToBottom(); // Scroll after adding error message
        }
        finally
        {
            StateHasChanged();
        }
    }

    private void CheckIfProfileComplete(string agentResponse)
    {
        // Check if roadmap is complete - roadmap should already be stored in RoadmapService
        if (agentResponse.Contains("ROADMAP_COMPLETE"))
        {
            // Roadmap is already managed by RoadmapService through agents
            // No need to set it here
        }
    }

    private async Task SaveAndNavigateToRoadmap()
    {
        if (isSaving) return; // Prevent multiple clicks
        
        isSaving = true;
        StateHasChanged();
        
        try
        {
            // Add a message to show we're saving with special styling
            conversationHistory.Add(new ConversationMessage
            {
                Content = "ðŸ’¾ **Saving your learning profile and roadmap to database...**",
                IsFromUser = false,
                MessageType = "saving"
            });
            StateHasChanged();
            await ScrollToBottom();
            
            // Small delay to show the saving message
            await Task.Delay(800);
            
            // The hybrid services automatically save to database when data is updated
            // But let's ensure we have the latest data by triggering a save explicitly
            await SaveToDatabase();
            
            // Add success message with special styling
            conversationHistory.Add(new ConversationMessage
            {
                Content = "âœ… **Successfully saved!** Your learning profile and roadmap are now stored in the database and will persist across sessions.",
                IsFromUser = false,
                MessageType = "success"
            });
            StateHasChanged();
            await ScrollToBottom();
            
            // Small delay before navigation
            await Task.Delay(1200);
            
            // Navigate to roadmap page
            NavManager.NavigateTo("/roadmap");
        }
        catch (Exception ex)
        {
            // Add error message with special styling
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"âŒ **Error saving data:** {ex.Message}. Don't worry, your roadmap is still available in memory and you can try saving again later.",
                IsFromUser = false,
                MessageType = "error"
            });
            StateHasChanged();
            await ScrollToBottom();
            
            // Still navigate to roadmap even if saving failed
            await Task.Delay(2000);
            NavManager.NavigateTo("/roadmap");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }
    
    private async Task SaveToDatabase()
    {
        try
        {
            // Get current profile and roadmap from services
            var currentProfile = LearningProfileService.CurrentProfile;
            var currentRoadmap = RoadmapService.GetRoadMap();
            
            // For hybrid services, the data should already be saved automatically
            // But let's verify we have valid data
            if (currentProfile != null && !string.IsNullOrWhiteSpace(currentProfile.LearningGoal))
            {
                // Profile data is automatically saved by HybridLearningProfileService
                // But we can trigger an explicit save by updating a timestamp
                LearningProfileService.UpdateProfile("learninggoal", currentProfile.LearningGoal);
            }
            
            if (currentRoadmap != null && currentRoadmap.Modules.Count > 0)
            {
                // Roadmap data is automatically saved by HybridRoadmapService  
                // But we can trigger an explicit save by updating the status
                RoadmapService.UpdateRoadMapStatus(currentRoadmap.Status);
            }
            
            // Give time for async database operations to complete
            await Task.Delay(1000);
        }
        catch (Exception ex)
        {
            // Log the error but don't rethrow - we still want to show the roadmap
            Console.WriteLine($"Error during database save: {ex.Message}");
            throw;
        }
    }

    private void NavigateToRoadmap()
    {
        // This method is kept for backward compatibility but now calls the new save method
        _ = SaveAndNavigateToRoadmap();
    }

    private string GetMessageContentWithoutKeyword(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return content;

        // Remove the ROADMAP_COMPLETE keyword from display
        return content.Replace("ROADMAP_COMPLETE", "", StringComparison.OrdinalIgnoreCase).Trim();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(userResponse))
        {
            await SendResponse();
        }
    }

    private string GetMessageCssClass(string messageType)
    {
        return messageType switch
        {
            "saving" => "saving-message",
            "success" => "success-message", 
            "error" => "error-message",
            _ => ""
        };
    }

    private string ConvertMarkdownToHtml(string markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown))
            return markdown;

        // Configure Markdig pipeline for safe HTML conversion
        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .UseSoftlineBreakAsHardlineBreak() // Convert line breaks to <br>
            .Build();

        return Markdown.ToHtml(markdown, pipeline);
    }
}
