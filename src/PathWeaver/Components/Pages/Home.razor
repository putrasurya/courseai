@page "/"
@rendermode InteractiveServer
@inject IOrchestratorAgent Orchestrator
@inject NavigationManager NavManager

@using System.Text
@using System.Threading.Tasks
@using PathWeaver.Agents
@using PathWeaver.Models

<PageTitle>PathWeaver - Your AI Learning Navigator</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>PathWeaver</h1>
        <p class="lead">Your personal AI-powered guide to creating learning roadmaps.</p>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            @if (!isInConversation)
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">What do you want to learn?</h5>
                        <p class="card-text">Describe your learning goal, and our AI agents will craft a personalized roadmap for you.</p>
                        
                        <div class="mb-3">
                            <textarea @bind="learningGoal" class="form-control" rows="4" placeholder="e.g., 'I want to become a full-stack web developer, starting with basic HTML and CSS, and moving to modern JavaScript frameworks and backend development.'"></textarea>
                        </div>

                        <div class="text-end">
                            <button @onclick="StartPlanning" class="btn btn-primary" disabled="@isPlanning">
                                @if (isPlanning)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="sr-only">Loading...</span>
                                    <span> Planning...</span>
                                }
                                else
                                {
                                    <span>Start Planning</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Planning Session</span>
                        <small class="text-muted">Building your profile...</small>
                    </div>
                    <div class="card-body">
                        <!-- Conversation History -->
                        <div class="conversation-history mb-3" style="max-height: 400px; overflow-y: auto;">
                            @foreach (var message in conversationHistory)
                            {
                                <div class="mb-3">
                                    <div class="d-flex align-items-start @(message.IsFromUser ? "justify-content-end" : "")">
                                        <div class="message @(message.IsFromUser ? "user-message" : "agent-message")">
                                            <small class="text-muted">@(message.IsFromUser ? "You" : "AI Planner")</small>
                                            <p class="mb-0">@message.Content</p>
                                            <small class="text-muted">@message.Timestamp.ToString("HH:mm")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- User Input for Conversation -->
                        <div class="input-group">
                            <input @bind="userResponse" @onkeypress="HandleKeyPress" class="form-control" 
                                   placeholder="Type your response..." disabled="@isProcessing" />
                            <button @onclick="SendResponse" class="btn btn-outline-primary" disabled="@(isProcessing || string.IsNullOrWhiteSpace(userResponse))">
                                @if (isProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                }
                                else
                                {
                                    <span>Send</span>
                                }
                            </button>
                        </div>

                        <!-- Generate Roadmap Button (shown when profile is complete) -->
                        @if (isProfileComplete)
                        {
                            <div class="mt-3 text-center">
                                <button @onclick="GenerateRoadmap" class="btn btn-success" disabled="@isGeneratingRoadmap">
                                    @if (isGeneratingRoadmap)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        <span> Generating Roadmap...</span>
                                    }
                                    else
                                    {
                                        <span>✓ Generate My Learning Roadmap</span>
                                    }
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .conversation-history {
        border: 1px solid #e9ecef;
        border-radius: 0.375rem;
        padding: 1rem;
        background-color: #f8f9fa;
    }
    
    .message {
        max-width: 70%;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        margin-bottom: 0.5rem;
    }
    
    .user-message {
        background-color: #0d6efd;
        color: white;
        margin-left: auto;
    }
    
    .agent-message {
        background-color: white;
        border: 1px solid #dee2e6;
    }
</style>

@code {
    private string learningGoal = "";
    private string userResponse = "";
    private bool isPlanning = false;
    private bool isInConversation = false;
    private bool isProcessing = false;
    private bool isProfileComplete = false;
    private bool isGeneratingRoadmap = false;

    private List<ConversationMessage> conversationHistory = new();

    public class ConversationMessage
    {
        public string Content { get; set; } = "";
        public bool IsFromUser { get; set; }
        public DateTime Timestamp { get; set; } = DateTime.Now;
    }

    private async Task StartPlanning()
    {
        if (string.IsNullOrWhiteSpace(learningGoal))
        {
            return;
        }

        isPlanning = true;
        isInConversation = true;

        try
        {
            // Add initial user message
            conversationHistory.Add(new ConversationMessage
            {
                Content = learningGoal,
                IsFromUser = true
            });

            // Start the planning conversation
            string orchestratorResult = await Orchestrator.StartPlanning(learningGoal);
            
            // Add agent response
            conversationHistory.Add(new ConversationMessage
            {
                Content = orchestratorResult,
                IsFromUser = false
            });

            // Check if the response indicates the profile is complete
            CheckIfProfileComplete(orchestratorResult);
        }
        catch (Exception ex)
        {
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"Sorry, there was an error: {ex.Message}",
                IsFromUser = false
            });
        }
        finally
        {
            isPlanning = false;
            StateHasChanged();
        }
    }

    private async Task SendResponse()
    {
        if (string.IsNullOrWhiteSpace(userResponse) || isProcessing)
            return;

        isProcessing = true;

        try
        {
            // Add user message
            conversationHistory.Add(new ConversationMessage
            {
                Content = userResponse,
                IsFromUser = true
            });

            string currentResponse = userResponse;
            userResponse = ""; // Clear input

            // Send to orchestrator for continued conversation
            string agentResponse = await Orchestrator.Invoke(currentResponse);

            // Add agent response
            conversationHistory.Add(new ConversationMessage
            {
                Content = agentResponse,
                IsFromUser = false
            });

            // Check if the response indicates the profile is complete
            CheckIfProfileComplete(agentResponse);
        }
        catch (Exception ex)
        {
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"Sorry, there was an error: {ex.Message}",
                IsFromUser = false
            });
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void CheckIfProfileComplete(string agentResponse)
    {
        // Simple heuristic to detect when profile gathering is complete
        // In a real implementation, this could check with the PlannerAgent
        // or look for specific keywords/patterns
        if (agentResponse.Contains("profile is complete", StringComparison.OrdinalIgnoreCase) ||
            agentResponse.Contains("ready to create", StringComparison.OrdinalIgnoreCase) ||
            agentResponse.Contains("sufficient information", StringComparison.OrdinalIgnoreCase))
        {
            isProfileComplete = true;
        }
    }

    private async Task GenerateRoadmap()
    {
        isGeneratingRoadmap = true;

        try
        {
            // var roadmap = await Orchestrator.GenerateRoadmap(learningGoal);
            // Navigate to roadmap view with the generated roadmap
            // NavManager.NavigateTo("/roadmap");
        }
        catch (Exception ex)
        {
            conversationHistory.Add(new ConversationMessage
            {
                Content = $"Error generating roadmap: {ex.Message}",
                IsFromUser = false
            });
        }
        finally
        {
            isGeneratingRoadmap = false;
            StateHasChanged();
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(userResponse))
        {
            await SendResponse();
        }
    }
}
